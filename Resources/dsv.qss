}

/*蓝色背景按钮*/
QPushButton {
    font: 12pt "微软雅黑";
    color: #FFF;
    background-color: #369FFF;
    border: none;
    border-radius: 3px;
}
QPushButton:disabled {
    background-color: rgba(54, 159, 255, 0.3);
}
QPushButton:hover{
    background:rgba(0, 0, 0, 0.2);
}


/*绿色背景按钮按钮*/
QPushButton#greenBackgroundButton {
    font: 12pt "微软雅黑";
    color: #FFF;
    background-color:rgba(54, 191, 125, 1);
    border: none;
    border-radius: 3px;
}
QPushButton#greenBackgroundButton:disabled {
    background-color: rgba(54, 159, 255, 0.3);
}
QPushButton#greenBackgroundButton:hover{
