QTreeWidget {
    font-family: "Microsoft YaHei";
    font-size: 14px;
    font-weight: normal;
    text-align: left;

}

QTreeWidget:focus
{
    outline: 0px;
}

QTreeWidget::item {
    font-family: "Microsoft YaHei";
    font-size: 14px;
    font-weight: normal;
    text-align: left;
    border: 0; /* 去除虚线外边框 */
    outline: none;
}

QTreeWidget::item:selected {
    background-color: #EEF7FF;
    color: #369FFF;
    outline: none;
}

QTreeWidget::item:hover {
    background-color: #EEF7FF;
    color: #369FFF;
}


QTableWidget {
    selection-background-color: #EEF7FF; /* 选中项的背景颜色 */
}

QTableWidget:focus
{
    outline: 0px;
}

QTableWidget QHeaderView::section {
    background-color: white; /* 表头的背景颜色 */
    color: black;
    font-weight: bold; /* 表头字体的粗细 */
    padding: 4px; /* 表头的内边距 */
}

QTableWidget::item {
    padding: 0px; /* 表格项的内边距 */
    height: 35px; /* 设置项的高度为40像素 */
}

QTableWidget::item:selected {
    color: black; /* 选中项的文本颜色 */
    outline: none;
}

QTableWidget::item:!selected:hover {
    background-color: lightblue; /* 非选中项悬停时的背景颜色 */
}

QTableWidget::item:selected:!active {
    background-color: #EEF7FF; /* 选中项但不是当前活动项的背景颜色 */
}

QTableWidget::item:selected:active {
    background-color: #A9D0F5; /* 选中项且是当前活动项的背景颜色 */
}

QTableWidget::item:disabled {
    color: gray; /* 禁用项的文本颜色 */
}

QTableWidget::item:focus {
    background-color: #E0FFFF; /* 选中项获得焦点时的背景颜色 */
}



QComboBox#tableComboBox {
    combobox-popup: 0;
    background-color: transparent; /* 设置背景透明 */
    padding: 1px; /* 设置内边距 */
}

QComboBox#tableComboBox::drop-down {
    width: 20px; /* 设置下拉箭头的宽度 */
}

QComboBox#tableComboBox::item {
    padding: 4px; /* 设置下拉项的内边距 */
    height: 30px; /* 设置下拉项的高度 */
}


