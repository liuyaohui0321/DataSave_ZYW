}


/*绿色字体按钮按钮*/
QPushButton#greenFontButton {
    font: 12pt "微软雅黑";
    border: 1px solid rgba(54,191,125,1); /* 绿色边框 */
    color: rgba(54,191,125,1); /* 绿色字体 */
    background-color: transparent; /* 背景透明 */
    border-radius: 3px;
}
QPushButton#greenFontButton:disabled {
    background-color: rgba(54, 159, 255, 0.3);
}
QPushButton#greenFontButton:hover{
    background:rgba(0, 0, 0, 0.2);
}

/*蓝色字体按钮按钮*/
QPushButton#blueFontButton {
    font: 12pt "微软雅黑";
    border: 1px solid rgba(54, 159, 255,1); /* 蓝色色边框 */
    color: rgba(54, 159, 255,1); /* 蓝色字体 */
    background-color: transparent; /* 背景透明 */
    border-radius: 3px;
}
QPushButton#blueFontButton:disabled {
    background-color: rgba(54, 159, 255, 0.3);
}
QPushButton#blueFontButton:hover{
    background:rgba(0, 0, 0, 0.2);
}

