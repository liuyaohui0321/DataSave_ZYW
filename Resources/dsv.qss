
/*设置右侧TabBar的样式*/
QTabBar::tab {
    background-color: white; /* 背景色为白色 */
    color: gray; /* 非选中时的字体颜色 */
    border-bottom: 0px solid rgba(222, 222, 222, 1); /* 非选中时无下边框 */
    padding: 5px 10px; /* 调整内边距 */
    height: 42px; /* 调整高度 */
    font-weight: bold; /* 加粗 */
    min-width: 160px;
    font-size: 15px;
}

QTabBar::tab:selected {
    background-color: white; /* 选中时的背景色 */
    color: rgba(54, 159, 255, 1); /* 选中时的字体颜色 */
    border-bottom: 2px solid rgba(54, 159, 255, 1); /* 选中时的下边框为蓝色 */
}

QTabWidget::pane {
    border-top: 1px solid rgba(222, 222, 222, 1);  /* 设置上边框 */
    border-left: none; /* 隐藏左边框 */
    border-right: none; /* 隐藏右边框 */
    border-bottom: none; /* 隐藏下边框 */
    margin-top: 0px;
    margin-bottom: 16px;
    margin-left: 10px;
    margin-right: 16px;
}


QComboBox::item:selected {
    background-color: lightblue;
}

QComboBox::item:!enabled {
    color: gray;
}


/*编辑框样式*/
QLineEdit {
    border: 1px solid rgba(220, 220, 220, 1); /* 灰色边框 */
    border-radius: 4px; /* 圆角 */
    height: 35px;
}

/*信息配置label*/
QLabel{
   color: black; /* 黑色文本 */
